{
  "name": "edusage-ai-platform",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "dev:web": "pnpm --filter web dev",
    "build:web": "pnpm --filter web build",
    "setup": "node tools/scripts/setup.js"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  }
}
